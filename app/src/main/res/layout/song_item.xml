<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="left"
    android:orientation="horizontal"
    android:padding="5dp">

    <com.example.he.material.UI.RoundImageView
        android:id="@+id/address_picture_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/imageshape"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/address_name_1"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/address_picture_1"
        android:gravity="center_vertical|left"
        android:textSize="15sp"
        tools:text="sdhalsjdhajsdhaks" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_more" />

</RelativeLayout>